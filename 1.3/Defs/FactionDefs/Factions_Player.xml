		<isPlayer>true</isPlayer>
		<basicMemberKind>ESCP_BosmerKind</basicMemberKind>
		<pawnSingular>Bosmer offworlder</pawnSingular>
		<pawnsPlural>Bosmer offworlders</pawnsPlural>
		<techLevel>Industrial</techLevel>
		<backstoryFilters>
		  <li>
			<categories>
			  <li>Offworld</li>
			</categories>
		  </li>
		</backstoryFilters>
		<factionIconPath>World/WorldObjects/Expanding/ESCP_BosmerSettlementIndustrial</factionIconPath>
		<playerInitialSettlementNameMaker>NamerInitialSettlementColony</playerInitialSettlementNameMaker>
